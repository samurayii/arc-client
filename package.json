{
    "name": "template",
    "version": "0.0.1",
    "description": "Template for nodejs cli app with typescript",
    "main": "index.js",
    "directories": {
        "lib": "lib"
    },
    "bin": {
        "template-cli": "./index.js"
    },
    "scripts": {
        "up": "ncu && ncu -u && rimraf ./package-lock.json && npm i",
        "ncu": "ncu",
        "pub": "npm run build && npm publish ./dist && rimraf ./dist",
        "build": "rimraf ./dist && npm run lint && tsc && json-key-remover && ncp ./README.md ./dist/README.md",
        "lint": "eslint \"./src/**/*.{js,ts}\" --quiet --fix && tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samurayii/template-project-ts-cli.git"
    },
    "keywords": [
        "templates",
        "typescript",
        "cli"
    ],
    "author": "Nuzhnov A.A.",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/samurayii/template-project-ts-cli/issues"
    },
    "homepage": "https://github.com/samurayii/template-project-ts-cli.git#readme",
    "devDependencies": {
        "@types/chalk": "^2.2.0",
        "@types/find-package-json": "^1.1.1",
        "@types/node": "^14.0.23",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "eslint": "^7.4.0",
        "json-key-remover": "^0.0.2",
        "ncp": "^2.0.0",
        "copy-files-from-to": "^3.1.4",
        "npm-check-updates": "^7.0.2",
        "rimraf": "^3.0.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "commander": "^6.1.0",
        "json-from-default-schema": "^0.1.4",
        "ajv": "^6.12.4",
        "chalk": "^4.1.0",
        "find-package-json": "^1.2.0",
        "jtomler": "^0.0.5"
    },
    "remover": {
        "target": "./package.json",
        "destination": "./dist/package.json",
        "remove": [
            "remover",
            "devDependencies",
            "scripts"
        ]
    }
}
