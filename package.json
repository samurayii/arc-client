{
    "name": "arc-client",
    "version": "0.0.1",
    "description": "Client for allure reports center",
    "main": "index.js",
    "directories": {
        "lib": "lib"
    },
    "bin": {
        "arc-client": "./index.js"
    },
    "scripts": {
        "up": "ncu && ncu -u && rimraf ./package-lock.json && npm i",
        "ncu": "ncu",
        "pub": "npm run build && npm publish ./dist",
        "build": "rimraf ./dist && npm run lint && tsc && json-key-remover && files-copier -e build",
        "lint": "eslint \"./src/**/*.{js,ts}\" --quiet --fix && tsc --noEmit",
        "start:dev": "ts-node ./src/index.ts",
        "install:local": "npm run build && npm install ./dist -g"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samurayii/arc-client.git"
    },
    "keywords": [
        "allure",
        "reports",
        "client",
        "testing",
        "cli"
    ],
    "author": "Nuzhnov A.A.",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/samurayii/arc-client/issues"
    },
    "homepage": "https://github.com/samurayii/arc-client.git#readme",
    "devDependencies": {
        "@types/chalk": "^2.2.0",
        "@types/find-package-json": "^1.1.1",
        "@types/node": "^14.14.14",
        "@typescript-eslint/eslint-plugin": "^4.11.0",
        "@typescript-eslint/parser": "^4.11.0",
        "eslint": "^7.16.0",
        "json-key-remover": "^0.0.3",
        "npm-check-updates": "^10.2.5",
        "rimraf": "^3.0.2",
        "ts-node": "^9.1.1",
        "files-copier": "^0.1.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "commander": "^6.2.1",
        "chalk": "^4.1.0",
        "find-package-json": "^1.2.0"
    },
    "remover": {
        "target": "./package.json",
        "destination": "./dist/package.json",
        "remove": [
            "remover",
            "devDependencies",
            "scripts",
            "copier"
        ]
    },
    "copier": {
        "build": {
            "rewrite": true,
            "copy": [
                {
                    "from": "./src/lib/schemes",
                    "to": "./dist/lib/schemes"
                },
                {
                    "from": "./README.md",
                    "to": "./dist/README.md"
                }
            ]
        }
    }
}
